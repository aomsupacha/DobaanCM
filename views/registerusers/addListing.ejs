              <label for="">รหัสทรัพย์</label>
              <input type="text" name="listing_id" value="" class="form-control">
            </div>
            
            <div class="row gx-3 gy-2 align-items-center" style="margin-top: 15px;">
              <div class="col-sm-3 form-group">
                <label for="">ขนาดพื้นที่ห้อง (ตร.ม.)</label>
                <input type="text" class="form-control" name="sizeroom">
              </div>
              <div class="col-sm-3 form-group">
                  <label for="">ห้องอยู่ชั้นที่</label>
                  <input type="text" class="form-control" name="floor">
                </div>
                <div class="col-sm-3 form-group">
                  <label for="">รูปแบบห้อง</label>
                  <select class="form-select" name="roomtype" style="color: rgb(139, 147, 155);">
                    <option selected>ห้องสตูดิโอ</option>
                    <option value="1">1 ห้องนอน</option>
                    <option value="2">2 ห้องนอน</option>
                    <option value="3">3 ห้องนอน</option>
                  </select>
                </div>
                <div class="col-sm-3">
                  <label for="">จำนวนห้องน้ำ</label>
                  <input type="text" class="form-control" name="bathroom">
                </div>
            </div>  

            <div class="form-group">
              <label for="">ราคา</label>
              <input type="text" name="listing_price" value="" class="form-control">
            </div>
            <div class="form-group">
              <label for="">เบอร์โทร</label>
              <input type="tel" name="phone" value="" class="form-control">
            </div>
            <div class="form-group">
              <label for="">รายละเอียด</label>
              <textarea type="text" name="description" rows="8" cols="80" class="form-control"></textarea>
            </div>
            <div class="form-group">
              <label for="image">รูปภาพ</label>
              <input type="file" name="image" value="" class="form-control">
            </div>
            <input type="hidden" name="registeruser" value="<%= registeruser.username %>">
            <input type="submit" name="submit" value="บันทึก" class="btn btn-success">
